<p id="notice"><%= notice %></p>

<nav>
  <span>
    <%= link_to 'Planes', airplanes_path %>  |  <%= link_to 'Flights', flights_path %>  |  <%= link_to 'Admin', users_path %>
  </span>
  <span class="nav-right">
   <%= link_to 'Logout', login_path, method: :delete %>
  </span>

<h1>New Flight</h1>

<%= render 'form', flight: @flight %>

<div class="row">
  <div class="col 3">
    <%= link_to 'Back', flights_path %>
  </div>
</div>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Flight no</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Airplane</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.flight_no %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.date %></td>
        <td><%= flight.airplane_id %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>
