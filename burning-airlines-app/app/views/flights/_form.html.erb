<%= form_for(flight) do |f| %>
  <% if flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
      <% flight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <form class="col s12">

    <div class="row">
      <div class="field col s6">
        <!-- <div class="active"> -->
        <%= f.label :flight_no %>
        <!-- </div> -->
        <%= f.number_field :flight_no %>
      </div>
      <div class="field col s6">
        <!-- <div class="active"> -->
        <%= f.label :airplane_id %>
        <!-- </div> -->
        <%= f.number_field :airplane_id %>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="field col s6">
        <%= f.label :origin %>
        <%= f.text_field :origin %>
      </div>
      <div class="field col s6">
        <%= f.label :destination %>
        <%= f.text_field :destination %>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="field col s6">
        <%= f.label :date %>
        <%= f.date_field :date %>
      </div>
      <div class="field col s6">
        <div class="actions">
        <%= f.submit %>
        </div>
      </div>
    </div><!-- row -->

  </form>
</div><!-- row -->
<% end %>
